    <!--==================== Colossal Crystal One ====================-->

    <ThingDef ParentName="PlantBaseNonEdible" Name="ColossalCrystal">
        <defName>SZ_ColossalCrystalOne</defName>
        <label>colossal crystal</label>
        <description>A massive, living crystal. It dwarfs those who gaze upon its magnificence.</description>
        <drawerType>MapMeshAndRealTime</drawerType>
        <passability>Impassable</passability>
        <selectable>true</selectable>
        <blockWind>true</blockWind>
        <castEdgeShadows>false</castEdgeShadows>
        <neverMultiSelect>false</neverMultiSelect>
        <rotatable>false</rotatable>
        <blockLight>false</blockLight>
        <tickerType>Long</tickerType>
        <size>(1,1)</size>
        <hideAtSnowDepth>1.0</hideAtSnowDepth>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <statBases>
            <MaxHitPoints>4500</MaxHitPoints>
            <Flammability>0.0</Flammability>
            <BeautyOutdoors>2.50</BeautyOutdoors>
        </statBases>
        <graphicData>
            <texPath>Things/Buildings/Natural/ResouceProducers/Crystals/ColossalCrystalOne</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shaderType>TransparentPlant</shaderType>
        </graphicData>
        <plant>
            <fertilitySensitivity>0.9</fertilitySensitivity>
            <growDays>30</growDays>
            <visualSizeRange>2.25~10.25</visualSizeRange>
            <topWindExposure>0.0</topWindExposure>
            <wildClusterRadius>12</wildClusterRadius>
            <wildClusterWeight>14</wildClusterWeight>
            <wildOrder>1</wildOrder>
        </plant>
        <comps>
            <li Class="CompProperties_Spawner">
                <thingToSpawn>SZ_BlueCrystalFragment</thingToSpawn>
                <spawnCount>3</spawnCount>
                <spawnIntervalRange>2500~720000</spawnIntervalRange>
                <writeTimeLeftToSpawn>true</writeTimeLeftToSpawn>
                <showMessageIfOwned>true</showMessageIfOwned>
            </li>
            <li Class="AlienBiomes.CompProperties_TimedGlower">
                <overlightRadius>11.0</overlightRadius>
                <glowRadius>12.0</glowRadius>
                <glowColor>(21, 177, 217, 0)</glowColor>
                <startTime>0.65</startTime>
                <stopTime>0.20</stopTime>
            </li>
            <li Class="AlienBiomes.CompProperties_GraphicsOverlay">
                <timeRangeDisplayed>0.65~0.20</timeRangeDisplayed>
                <graphicElements>
                    <li>
                        <!-- 1-pixel on a 512x512 canvas. -->
                        <!-- For some reason the first array element here doesn't obey the code. -->
                        <texPath>Things/Special/Overlays/Crystals/ColossalCrystalError/ColossalCrystalA</texPath>
                        <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>TransparentPlant</shaderType>
                        <drawOffset>(0, 0, 1.15)</drawOffset>
                        <drawSize>0.05</drawSize>
                    </li>
                    <li> <!-- MIDDLE -->
                        <texPath>Things/Special/Overlays/Crystals/ColossalCrystal</texPath>
                        <graphicClass>Graphic_Random</graphicClass>
                        <shaderType>TransparentPlant</shaderType>
                        <drawOffset>(0, 0, 1.05)</drawOffset>
                        <drawSize>2.00</drawSize>
                    </li>
                    <li> <!-- LEFT -->
                        <texPath>Things/Special/Overlays/Crystals/ColossalCrystal</texPath>
                        <graphicClass>Graphic_Random</graphicClass>
                        <shaderType>TransparentPlant</shaderType>
                        <drawOffset>(-1.15, 0, 1.05)</drawOffset>
                        <drawSize>1.75</drawSize>
                    </li>
                    <li> <!-- RIGHT -->
                        <texPath>Things/Special/Overlays/Crystals/ColossalCrystal</texPath>
                        <graphicClass>Graphic_Random</graphicClass>
                        <shaderType>TransparentPlant</shaderType>
                        <drawOffset>(1.15, 0, 1.05)</drawOffset>
                        <drawSize>1.75</drawSize>
                    </li>
                </graphicElements>
            </li>
        </comps>
        <modExtensions>
            <li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
                <terrainTags>
                    <li>Soil</li>
                </terrainTags>
            </li>
        </modExtensions>
    </ThingDef>

