<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== STEAM GEYSERS ====================-->

    <ThingDef ParentName="BuildingNaturalBase" Name="AlienBiomes_SteamGeyserBase">
        <defName>SZ_SteamGeyserRadiantSoil</defName>
        <label>steam geyser</label>
        <description>A natural source of high-pressure steam. Geothermal generators can harness the steam power. Rooms built over this will rapidly cook.</description>
        <thingClass>AlienBiomes.Building_SteamGeyserRadiantSoil</thingClass>
        <graphicData>
            <texPath>Things/Buildings/Natural/SteamGeyser/SteamGeyserRadiantSoil</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawSize>(4,4)</drawSize>
        </graphicData>
        <uiIconScale>0.5</uiIconScale>
        <altitudeLayer>Floor</altitudeLayer>
        <rotatable>false</rotatable>
        <destroyable>false</destroyable>
        <useHitPoints>false</useHitPoints>
        <tickerType>Normal</tickerType>
        <selectable>true</selectable>
        <size>(2,2)</size>
        <neverOverlapFloors>true</neverOverlapFloors> 
        <blockPlants>true</blockPlants>
        <building>
            <isEdifice>false</isEdifice>
            <claimable>false</claimable>
            <deconstructible>false</deconstructible>
        </building>
    </ThingDef>

    <ThingDef ParentName="AlienBiomes_SteamGeyserBase">
        <defName>SZ_SteamGeyserRadiantRichSoil</defName>
        <thingClass>AlienBiomes.Building_SteamGeyserRadiantRichSoil</thingClass>
        <graphicData>
            <texPath>Things/Buildings/Natural/SteamGeyser/SteamGeyserRadiantSoil</texPath> <!-- change this -->
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawSize>(4,4)</drawSize>
        </graphicData>
    </ThingDef>

</Defs>