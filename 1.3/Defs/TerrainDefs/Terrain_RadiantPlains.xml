<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== Radiant Soil ====================-->

    <TerrainDef ParentName="NaturalTerrainBase">
        <defName>SZ_RadiantSoil</defName>
        <label>radiant soil</label>
        <texturePath>Terrain/Surfaces/SZ_RadiantSoil</texturePath>
        <edgeType>FadeRough</edgeType>
        <renderPrecedence>340</renderPrecedence>
        <pathCost>1</pathCost>
        <statBases>
            <Beauty>0</Beauty>
            <BeautyOutdoors>0</BeautyOutdoors>
            <Cleanliness>-1</Cleanliness>
        </statBases>
        <scatterType>Rocky</scatterType>
        <affordances>
            <li>Light</li>
            <li>Medium</li>
            <li>Heavy</li>
            <li>GrowSoil</li>
            <li>Diggable</li>
        </affordances>
        <generatedFilth>Filth_Dirt</generatedFilth>
        <fertility>1.0</fertility>
        <takeFootprints>True</takeFootprints>
        <tools>
            <li>
                <label>dirt</label>
                <capacities>
                    <li>KickMaterialInEyes</li>
                </capacities>
                <hediff>DirtInEyes</hediff>
                <cooldownTime>1.5</cooldownTime>
            </li>
        </tools>
        <modExtensions>
            <li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
                <terrainTags>
                    <li>Soil</li>
                </terrainTags>
            </li>
        </modExtensions>
    </TerrainDef>

