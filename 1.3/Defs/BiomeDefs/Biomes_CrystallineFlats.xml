<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== Crystalline Flats ====================-->

    <!-- No animal diseases. :) -->

    <BiomeDef>
        <defName>SZ_CrystallineFlats</defName>
        <label>crystalline flats</label>
        <description>These lands are uncharacteristically sterile and covered in gigantic crystal pillars, flanked by smaller scatterings of crystalline formations.\n\nYou'll find many exotic materials here, however, a severe lack in vegetation. Yet, with less than desirable plant density, the flora growing in these parts reaches maturity at an astounding rate because of the elevated levels of minerals within the soil. You'll also find pools of water so deep and curious they almost... invite creatures down into their unending depths.</description>
        <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
        <animalDensity>1.2</animalDensity>
        <plantDensity>0.75</plantDensity>
        <settlementSelectionWeight>1</settlementSelectionWeight>
        <movementDifficulty>1</movementDifficulty>
        <texture>World/Biomes/SZ_CrystallineFlats</texture>
        <forageability>1</forageability>
        <foragedFood>RawBerries</foragedFood>
        <wildPlantRegrowDays>20</wildPlantRegrowDays>
        <soundsAmbient>
            <li>Ambient_NightInsects_Standard</li>
        </soundsAmbient>
        <diseaseMtbDays>120</diseaseMtbDays>
        <diseases>
            <li>
                <diseaseInc>Disease_Flu</diseaseInc>
                <commonality>75</commonality>
            </li>
            <li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>60</commonality>
			</li>
			<li>
				<diseaseInc>Disease_GutWorms</diseaseInc>
				<commonality>75</commonality>
			</li>
        </diseases>
        <terrainsByFertility>
            <li>
                <terrain>SZ_CrystallineSoil</terrain>
                <min>-999</min>
                <max>0.87</max>
            </li>
            <li>
                <terrain>SZ_CrystallineSand</terrain>
                <min>0.87</min>
                <max>0.91</max>
            </li>
            <li>
                <terrain>SZ_CrystallineRichSoil</terrain>
                <min>0.91</min>
                <max>999</max>
            </li>
        </terrainsByFertility>
        <terrainPatchMakers>
            <li>
                <perlinFrequency>0.008</perlinFrequency>
                <thresholds>
                    <li>
                        <terrain>SZ_CrystallineRichSoil</terrain>
                        <min>0.52</min>
                        <max>0.78</max>
                    </li>
                    <li>
                        <terrain>SZ_CrystallineSand</terrain>
                        <min>0.78</min>
                        <max>0.85</max>
                    </li>
                    <li>
                        <terrain>WaterDeep</terrain>
                        <min>0.85</min>
                        <max>999</max>
                    </li>
                </thresholds>
            </li>
        </terrainPatchMakers>
        <baseWeatherCommonalities>
            <Clear>16</Clear>
            <Rain>6</Rain>
            <DryThunderstorm>2.5</DryThunderstorm>
            <RainyThunderstorm>5</RainyThunderstorm>
        </baseWeatherCommonalities>
        <wildPlants>
            <SZ_ColossalCrystalOne>0.02</SZ_ColossalCrystalOne>
            <SZ_ColossalCrystalTwo>0.02</SZ_ColossalCrystalTwo>
            <SZ_InferiorCrystal>0.06</SZ_InferiorCrystal>
            <SZ_ShimmeringGrass>7.50</SZ_ShimmeringGrass>
            <SZ_ShimmeringTallGrass>12.0</SZ_ShimmeringTallGrass>
            <SZ_GlisteningGrass>5.50</SZ_GlisteningGrass>
            <SZ_GlisteningTallGrass>11.0</SZ_GlisteningTallGrass>
        </wildPlants>
        <wildAnimals> <!-- CHANGE -->
            <Donkey>0.20</Donkey>
            <Bast_Alluvium MayRequire="Scurvyez.Bastyon">0.08</Bast_Alluvium>
            <Bast_Gleaming_Cervus MayRequire="Scurvyez.Bastyon">0.30</Bast_Gleaming_Cervus>
            <Bast_Ethereal_Lion MayRequire="Scurvyez.Bastyon">0.05</Bast_Ethereal_Lion>
            <Bast_Lightning_Elemental MayRequire="Scurvyez.Bastyon">0.07</Bast_Lightning_Elemental>
            <Bast_Scire MayRequire="Scurvyez.Bastyon">0.20</Bast_Scire>
        </wildAnimals>
        <modExtensions> <!-- CHANGE -->
			<li Class="BiomesKit.BiomesKitControls">
                <allowOnLand>True</allowOnLand>
                <frequency>100</frequency>
                <spawnOnBiomes>
                    <li>
                        <li>Desert</li>
                    </li>
              </spawnOnBiomes>
			</li>
            <li Class="BiomesCore.DefModExtensions.BiomesMap">
            </li>
		</modExtensions>
    </BiomeDef>

</Defs>