<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== Enlightened Plains ====================-->

    <!-- Belt around middle of planet. -->
    <!-- Temperate, sprawling with life. -->

    <!-- Add 4 more plants. -->
    <!-- Add some ambient FleckDefs for the plants (check performance). -->
    <!-- Add new filth types for the soils and sand. -->
    <!-- Add ambient sounds for when a pawn walks through certain plants? -->

    <!-- Grass that grows seeds in naturally-produced high-pressure methane capsules that are
        triggered by proximity and fires seeds into the skin and flesh of nearby animals. 
        They draw nutrients from the bloodstream and then eventually kill their host,
        bursting from their bodies to continue their lifecycle. -->

    <BiomeDef>
        <defName>SZ_EnlightenedPlains</defName>
        <label>enlightened plains</label>
        <description>These lands instill peace in those who walk upon them. Vibrant and lush grasses surround all and ancient trees grow in small clusters as the local fauna congregates nearby.\n\nThe ground here seems to roll and fold as if emulating small sand dunes. Nutrition is plentiful, water flows freely, and occasionally groups of wildlife linger.\n\nWhen night falls, the plains come to life.</description>
        <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
        <animalDensity>1.7</animalDensity>
        <plantDensity>1.2</plantDensity>
        <settlementSelectionWeight>1</settlementSelectionWeight>
        <movementDifficulty>1</movementDifficulty>
        <texture>World/Biomes/SZ_EnlightenedPlains</texture>
        <forageability>1</forageability>
        <foragedFood>RawBerries</foragedFood>
        <wildPlantRegrowDays>20</wildPlantRegrowDays>
        <soundsAmbient>
            <li>Ambient_NightInsects_Jungle</li>
            <li>Ambient_DayInsects_Jungle</li>
        </soundsAmbient>
        <diseaseMtbDays>75</diseaseMtbDays>
        <diseases>
            <li>
                <diseaseInc>Disease_Flu</diseaseInc>
                <commonality>100</commonality>
            </li>
            <li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_GutWorms</diseaseInc>
				<commonality>80</commonality>
			</li>
			<li>
				<diseaseInc>Disease_AnimalFlu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_AnimalPlague</diseaseInc>
				<commonality>100</commonality>
			</li>
        </diseases>
        <terrainsByFertility>
            <li>
                <terrain>SZ_EnlightenedSoil</terrain>
                <min>-999</min>
                <max>0.87</max>
            </li>
            <li>
                <terrain>SZ_EnlightenedRichSoil</terrain>
                <min>0.87</min>
                <max>999</max>
            </li>
        </terrainsByFertility>
        <terrainPatchMakers>
            <li>
                <perlinFrequency>0.020</perlinFrequency>
                <thresholds>
                    <li>
                        <terrain>SZ_EnlightenedRichSoil</terrain>
                        <min>0.42</min>
                        <max>0.78</max>
                    </li>
                    <li>
                        <terrain>SZ_EnlightenedStonySoil</terrain>
                        <min>0.78</min>
                        <max>0.85</max>
                    </li>
                    <li>
                        <terrain>WaterShallow</terrain>
                        <min>0.85</min>
                        <max>999</max>
                    </li>
                </thresholds>
            </li>
        </terrainPatchMakers>
        <baseWeatherCommonalities>
            <Clear>18</Clear>
            <Rain>8</Rain>
            <DryThunderstorm>1</DryThunderstorm>
            <RainyThunderstorm>5</RainyThunderstorm>
        </baseWeatherCommonalities>
        <wildPlants>
            <SZ_SpiralStalk>0.15</SZ_SpiralStalk>
            <SZ_CopaceticCone>0.22</SZ_CopaceticCone>
            <SZ_ElderBlushingTree>0.01</SZ_ElderBlushingTree>
            <SZ_Plant_EnlightenedGrass>5.00</SZ_Plant_EnlightenedGrass>
            <SZ_Plant_EnlightenedTallGrass>4.10</SZ_Plant_EnlightenedTallGrass>
        </wildPlants>
        <wildAnimals>
            <Donkey>0.20</Donkey>
            <GuineaPig>0.45</GuineaPig>
            <Horse>0.20</Horse>
            <Hare>1.0</Hare>
            <Squirrel>1.0</Squirrel>
            <Rat>1.0</Rat>
            <Deer>0.5</Deer>
            <WildBoar>0.5</WildBoar>
            <Turkey>0.5</Turkey>
            <Raccoon>0.5</Raccoon>
            <Muffalo>0.5</Muffalo>
            <Alpaca>0.5</Alpaca>
            <Tortoise>0.3</Tortoise>
            <Megasloth>0.2</Megasloth>
            <Rhinoceros>0.1</Rhinoceros>
            <Fox_Red>0.07</Fox_Red>
            <Bast_Bastyon MayRequire="Scurvyez.Bastyon">0.02</Bast_Bastyon>
            <Bast_Alluvium MayRequire="Scurvyez.Bastyon">0.02</Bast_Alluvium>
        </wildAnimals>
        <modExtensions>
			<li Class="BiomesKit.BiomesKitControls">
                <allowOnLand>True</allowOnLand>
                <frequency>100</frequency>
                <minTemperature>20.5</minTemperature>
                <maxTemperature>30.5</maxTemperature>
                <maxHilliness>Flat</maxHilliness>
			</li>
            <li Class="BiomesCore.DefModExtensions.BiomesMap">
            </li>
		</modExtensions>
    </BiomeDef>

</Defs>