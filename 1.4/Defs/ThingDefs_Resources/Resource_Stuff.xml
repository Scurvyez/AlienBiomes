<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== Elder Woody Shavings ====================-->

    <ThingDef ParentName="ResourceBase">
        <defName>SZ_FragrantWoodShavings</defName>
        <label>elder wood shavings</label>
        <description>The woody shavings of an elder blushing tree. They can be refined into elder wood logs.</description>
        <graphicData>
            <texPath>Things/Items/Resources/FragrantWoodShavings</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>0.85</MarketValue>
            <MaxHitPoints>105</MaxHitPoints>
            <Mass>0.1</Mass>
            <Flammability>1.0</Flammability>
            <DeteriorationRate>0.5</DeteriorationRate>
        </statBases>
        <burnableByRecipe>true</burnableByRecipe>
        <healthAffectsPrice>false</healthAffectsPrice>
        <minRewardCount>10</minRewardCount>
        <stuffProps>
            <commonality>1.00</commonality>
            <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
        </stuffProps>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
    </ThingDef>

    <!--==================== Elder Wood Log ====================-->

    <ThingDef ParentName="ResourceVerbBase">
        <defName>SZ_ElderWoodLog</defName>
        <label>elder wood log</label>
        <description>These logs can be used just like any other. They are the product of elder tree wood shavings and leave a pleasant aroma amidst the air.</description>
        <graphicData>
            <texPath>Things/Items/Resources/ElderWoodLog</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <equippedAngleOffset>-20</equippedAngleOffset>
        <soundInteract>Wood_Drop</soundInteract>
        <soundDrop>Wood_Drop</soundDrop>
        <statBases>
            <MarketValue>1.35</MarketValue>
            <MaxHitPoints>150</MaxHitPoints>
            <Mass>0.4</Mass>
            <Beauty>0.50</Beauty>
            <Flammability>1.0</Flammability>
            <DeteriorationRate>0.5</DeteriorationRate>
            <StuffPower_Armor_Sharp>0.54</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>0.54</StuffPower_Armor_Blunt>
            <StuffPower_Armor_Heat>0.40</StuffPower_Armor_Heat>
            <StuffPower_Insulation_Cold>8</StuffPower_Insulation_Cold>
            <StuffPower_Insulation_Heat>4</StuffPower_Insulation_Heat>
            <SharpDamageMultiplier>0.40</SharpDamageMultiplier>
            <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
        </statBases>
        <burnableByRecipe>true</burnableByRecipe>
        <healthAffectsPrice>false</healthAffectsPrice>
        <minRewardCount>10</minRewardCount>
        <stuffProps>
            <stuffAdjective>elder wood</stuffAdjective>
            <categories>
                <li>Woody</li>
            </categories>
            <commonality>0.20</commonality>
            <color>(130, 112, 145)</color>
            <constructEffect>ConstructWood</constructEffect>
            <appearance>Planks</appearance>
            <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
            <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
            <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
            <statFactors>
                <MaxHitPoints>0.65</MaxHitPoints>
                <Beauty>1</Beauty>
                <Flammability>1</Flammability>
                <WorkToMake>0.7</WorkToMake>
                <WorkToBuild>0.7</WorkToBuild>
                <DoorOpenSpeed>1.2</DoorOpenSpeed>
            </statFactors>
            <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
        </stuffProps>
        <isTechHediff>true</isTechHediff>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <techHediffsTags>
            <li>Poor</li>
        </techHediffsTags>
        <weaponClasses>
            <li>Melee</li>
            <li>MeleeBlunt</li>
            <li>Neolithic</li>
        </weaponClasses>
        <tools>
            <li>
                <label>elder log</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <allowedArchonexusCount>150</allowedArchonexusCount>
    </ThingDef>

