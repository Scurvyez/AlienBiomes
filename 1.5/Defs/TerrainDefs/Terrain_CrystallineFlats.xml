<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== Crystalline Soil ====================-->

    <TerrainDef ParentName="NaturalTerrainBase">
        <defName>SZ_CrystallineSoil</defName>
        <label>crystalline soil</label>
        <texturePath>AlienBiomes/Terrain/Surfaces/SZ_CrystallineSoil</texturePath>
        <edgeType>FadeRough</edgeType>
        <renderPrecedence>340</renderPrecedence>
        <pathCost>1</pathCost>
        <statBases>
            <Beauty>0</Beauty>
            <BeautyOutdoors>0</BeautyOutdoors>
            <Cleanliness>0</Cleanliness>
        </statBases>
        <scatterType>Rocky</scatterType>
        <affordances>
            <li>Light</li>
            <li>Medium</li>
            <li>Heavy</li>
            <li>GrowSoil</li>
            <li>Diggable</li>
        </affordances>
        <generatedFilth>SZ_Filth_CrystallineSoil</generatedFilth>
        <fertility>0.90</fertility>
        <takeFootprints>True</takeFootprints>
        <tools>
            <li>
                <label>dirt</label>
                <capacities>
                    <li>KickMaterialInEyes</li>
                </capacities>
                <hediff>DirtInEyes</hediff>
                <cooldownTime>1.5</cooldownTime>
            </li>
        </tools>
        <tags>
            <li>Soil</li>
        </tags>
        <modExtensions>
            <li Class="AlienBiomes.Plant_TerrainControl_ModExt">
                <terrainTags>
                    <li>Soil</li>
                </terrainTags>
            </li>
        </modExtensions>
    </TerrainDef>

