<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== Delirious Stony Soil ====================-->

    <TerrainDef ParentName="NaturalTerrainBase">
        <defName>SZ_DeliriousStonySoil</defName>
        <label>delirious stony soil</label>
        <texturePath>AlienBiomes/Terrain/Surfaces/SZ_DeliriousStonySoil</texturePath>
        <edgeType>FadeRough</edgeType>
        <renderPrecedence>320</renderPrecedence>
        <pathCost>2</pathCost>
        <statBases>
            <Beauty>-2</Beauty>
            <BeautyOutdoors>-2</BeautyOutdoors>
            <Cleanliness>-1</Cleanliness>
        </statBases>
        <scatterType>Rocky</scatterType>
        <affordances>
            <li>Light</li>
            <li>Medium</li>
            <li>Heavy</li>
            <li>GrowSoil</li>
            <li>Diggable</li>
        </affordances>
        <generatedFilth>Filth_Dirt</generatedFilth>
        <fertility>0.7</fertility>
        <takeFootprints>True</takeFootprints>
        <tools>
            <li>
                <label>rough dirt</label>
                <capacities>
                    <li>KickMaterialInEyes</li>
                </capacities>
                <hediff>DirtInEyes</hediff>
                <cooldownTime>1.5</cooldownTime>
            </li>
        </tools>
        <modExtensions>
            <li Class="AlienBiomes.BiomePlantControl">
                <terrainTags>
                    <li>Rocky</li>
                </terrainTags>
            </li>
        </modExtensions>
    </TerrainDef>

